@model WebAppLayer.Models.Denuncia
@using WebAppLayer.Models
@{
    ViewBag.Tittle = "Cadastrar Denuncia";
    var animais = ViewBag.Animais ?? new List<Animal>();

}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Denuncia</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.Label("model.DataDaDenuncia", "Data da denuncia", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DataDaDenuncia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DataDaDenuncia, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Local.CEP, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Local.CEP, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Local.CEP, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Local.Numero, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Local.Numero, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Local.Numero, "", new { @class = "text-danger" })
            <span class="informacoes"> Caso não saiba o numero do local, digite "000"</span>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Local.Rua, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Local.Rua, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Local.Rua, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Local.Bairro, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Local.Bairro, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Local.Bairro, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Local.Cidade, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Local.Cidade, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Local.Cidade, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Local.UF, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Local.UF, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Local.UF, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("WebAppLayer.Models.Animal", "Animal", htmlAttributes: new { @class = "control-label col-md-2" })
        <div>
            <select id="Animais" class="form-control">
                @foreach (var animal in animais)
                {
                    <option value="@animal.ID">
                        @animal.NomePopular
                    </option>
                }
            </select>
            <button type="button" class="btn btn-info">

                <i class="material-icons">add</i>
            </button>

        </div>
        <span class="informacoes"> Se caso não houver o animal cadastrado, descreva-o no campo abaixo</span>
    </div>
        <div class="form-group">
            @Html.Label("model.DescricaoAnimal", "Descreva o Animal", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextArea("model.DescricaoAnimal", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DescricaoAnimal, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("model.Anonimo", "Marque se gostaria manter o Anonimato", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Anonimo)
                    @Html.ValidationMessageFor(model => model.Anonimo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cadastrar Denuncia" class="btn btn-default Botao" />
            </div>
        </div>
    </div>
    }
