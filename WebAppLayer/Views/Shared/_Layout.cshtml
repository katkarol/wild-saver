<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/Imagens/bird_icon.png" />
    <title>@ViewBag.Title - Wild Saver </title>
    <link href="~/Content/google-fonts.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @using WebAppLayer.Filtros;
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Wild Saver", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @if (Mudanca_Navbar.VerificarUsuario())
                    {
                        <li>@Html.ActionLink("Sobre nós", "Sobre", "Home")</li>
                        <li>@Html.ActionLink("Contato", "Contato", "Home")</li>
                        <li>@Html.ActionLink("Denunciar", "Cadastrar", "Denuncia")</li>
                    }
                    @if (Mudanca_Navbar.VerificarFuncionario())
                    {
                        <li>@Html.ActionLink("Filo", "Cadastrar", "Filo")</li>
                        <li>@Html.ActionLink("Classe", "Cadastrar", "Classe")</li>
                        <li>@Html.ActionLink("Ordem", "Cadastrar", "Ordem")</li>
                        <li>@Html.ActionLink("Família", "Cadastrar", "Ordem")</li>
                        <li>@Html.ActionLink("Gênero", "Cadastrar", "Ordem")</li>
                        <li>@Html.ActionLink("Animal", "Cadastrar", "Animal")</li>
                    }

                    @if (Mudanca_Navbar.Logado())
                    {
                        <li>@Html.ActionLink("Sair", "Sair", "Usuario")</li>
                    }
                    @if (!Mudanca_Navbar.Logado())
                    {
                        <li>@Html.ActionLink("Login", "Login", "Usuario")</li>
                        <li>@Html.ActionLink("Criar Conta", "CriarConta", "Usuario")</li>
                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Wild Saver</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
