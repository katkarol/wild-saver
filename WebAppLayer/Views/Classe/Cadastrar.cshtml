@model WebAppLayer.Models.Classe

@{
    ViewBag.Title = "Cadastrar Classe";
}

<h2>Cadastrar Classe</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NomePopular, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NomePopular, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NomePopular, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Filo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div>
            <select id="filo" name="classe.filo.ID" class="form-control">
                @for (int i = 0; i < ViewBag.Filos.Count; i++)
                {
                    <option value="@ViewBag.Filos[i].ID" selected="@ViewBag.Filos[i].ID.Equals(ViewBag.Classe.Filo.ID)">
                        @ViewBag.Filos[i].Nome
                    </option>
                }
            </select>

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
    </div>
}
    
  
